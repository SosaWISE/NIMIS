	<Style x:Key="HeaderMenuButton"
		   TargetType="{x:Type Button}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type Button}">
					<Grid>
						<Border x:Name="BackgroundGlow"
								Opacity="0">
							<Border.Background>
								<RadialGradientBrush>
									<RadialGradientBrush.RelativeTransform>
										<TransformGroup>
											<ScaleTransform CenterX="0.5"
															CenterY="0.5"
															ScaleX="1.013"
															ScaleY="2.301" />
											<SkewTransform AngleX="0"
														   AngleY="0"
														   CenterX="0.5"
														   CenterY="0.5" />
											<RotateTransform Angle="0"
															 CenterX="0.5"
															 CenterY="0.5" />
											<TranslateTransform X="-0.002"
																Y="0.005" />
										</TransformGroup>
									</RadialGradientBrush.RelativeTransform>
									<GradientStop Color="#003C77A9"
												  Offset="1" />
									<GradientStop Color="#FF3C77A9"
												  Offset="0.415" />
								</RadialGradientBrush>
							</Border.Background>
						</Border>
						<Border x:Name="MainBorder"
								BorderBrush="#FFFFFFFF"
								BorderThickness="0,1,0,0"
								CornerRadius="0,0,0,0"
								Background="#FF0C0B0E"
								Margin="8,0,8,0">
							<Border BorderBrush="#FF98C6EA"
									BorderThickness="0,1,0,0"
									CornerRadius="0,0,0,0"
									x:Name="InnerBorder">
								<Border.Background>
									<LinearGradientBrush EndPoint="0.5,1"
														 StartPoint="0.5,0">
										<GradientStop Color="#00ADADAD"
													  Offset="1" />
										<GradientStop Color="#44FFFFFF"
													  Offset="0" />
									</LinearGradientBrush>
								</Border.Background>
								<ContentPresenter HorizontalAlignment="Center"
												  Margin="0,0,0,0"
												  VerticalAlignment="Center" />
							</Border>
						</Border>
					</Grid>
					<ControlTemplate.Triggers>
						<Trigger Property="IsPressed"
								 Value="True">
							<Setter Property="Background"
									TargetName="InnerBorder"
									Value="#CC000000" />
						</Trigger>
						<Trigger Property="IsMouseOver"
								 Value="True">
							<Setter Property="Opacity"
									TargetName="BackgroundGlow"
									Value="1" />
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style TargetType="{x:Type Button}">
		<Setter Property="Foreground"
				Value="#FFFFFFFF" />
		<Setter Property="Padding"
				Value="5,0,5,0" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type Button}">
					<Border x:Name="MainBorder"
							BorderBrush="#00FFFFFF"
							BorderThickness="1,1,1,1"
							CornerRadius="4,4,4,4">
						<Border Background="#AF000000"
								BorderBrush="#FF000000"
								BorderThickness="1,1,1,1"
								CornerRadius="4,4,4,4"
								x:Name="InnerBorder">
							<Grid x:Name="MainGrid">
								<Grid.RowDefinitions>
									<RowDefinition Height="0.5*" />
									<RowDefinition Height="0.5*" />
								</Grid.RowDefinitions>
								<Border Margin="0,0,0,0"
										x:Name="GlowGradient"
										Grid.Row="0"
										Grid.RowSpan="2"
										CornerRadius="4,4,4,4"
										Opacity="0">
									<Border.Background>
										<RadialGradientBrush>
											<RadialGradientBrush.RelativeTransform>
												<TransformGroup>
													<ScaleTransform CenterX="0.5"
																	CenterY="0.5"
																	ScaleX="1.19"
																	ScaleY="2.22" />
													<SkewTransform AngleX="0"
																   AngleY="0"
																   CenterX="0.5"
																   CenterY="0.5" />
													<RotateTransform Angle="0"
																	 CenterX="0.5"
																	 CenterY="0.5" />
													<TranslateTransform X="0.008"
																		Y="0.481" />
												</TransformGroup>
											</RadialGradientBrush.RelativeTransform>
											<GradientStop Color="#B28D8DFF"
														  Offset="0" />
											<GradientStop Color="#008D8DFF"
														  Offset="1" />
										</RadialGradientBrush>
									</Border.Background>
								</Border>
								<ContentPresenter HorizontalAlignment="Center"
												  Margin="{TemplateBinding Padding}"
												  VerticalAlignment="Center"
												  Grid.RowSpan="2" />
								<Border Margin="0,0,0,0"
										x:Name="ShineGradient"
										CornerRadius="4,4,0,0">
									<Border.Background>
										<LinearGradientBrush EndPoint="0.5,1"
															 StartPoint="0.5,0">
											<GradientStop Color="#9AFFFFFF"
														  Offset="0" />
											<GradientStop Color="#1EFFFFFF"
														  Offset="1" />
										</LinearGradientBrush>
									</Border.Background>
								</Border>
							</Grid>
						</Border>
					</Border>
					<ControlTemplate.Triggers>
						<Trigger Property="IsPressed"
								 Value="True">
							<Setter Property="Visibility"
									TargetName="GlowGradient"
									Value="Hidden" />
							<Setter Property="Opacity"
									TargetName="ShineGradient"
									Value="0.4" />
							<Setter Property="Background"
									TargetName="InnerBorder"
									Value="#CC000000" />
						</Trigger>
						<Trigger Property="IsMouseOver"
								 Value="True">
							<Setter Property="Opacity"
									TargetName="GlowGradient"
									Value="1.0" />
						</Trigger>
						<Trigger Property="IsEnabled"
								 Value="false">
							<Setter Property="Background"
									TargetName="MainGrid"
									Value="#FFAEAEAE" />
							<Setter Property="BorderBrush"
									TargetName="InnerBorder"
									Value="#FFAEAEAE" />
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

