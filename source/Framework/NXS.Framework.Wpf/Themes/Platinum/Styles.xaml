							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto" />
							<RowDefinition Height="*" />
						</Grid.RowDefinitions>
						<Border Margin="0,0,0,0"
								SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
								Grid.Row="0"
								Background="{TemplateBinding HeaderBackground}"
								BorderBrush="{TemplateBinding BorderBrush}"
								BorderThickness="0,0,0,0"
								CornerRadius="0,0,0,0"
								Padding="2,0,2,0">
							<TextBlock RenderTransformOrigin="0.5,0.5"
									   Margin="{TemplateBinding HeaderMargin}"
									   Padding="{TemplateBinding HeaderPadding}"
									   FontFamily="{TemplateBinding HeaderFontFamily}"
									   FontSize="{TemplateBinding HeaderFontSize}"
									   FontStyle="{TemplateBinding HeaderFontStyle}"
									   FontWeight="{TemplateBinding HeaderFontWeight}"
									   Foreground="{TemplateBinding HeaderForeground}"><TextBlock.RenderTransform>
									<TransformGroup>
										<ScaleTransform ScaleX="1"
														ScaleY="1" />
										<SkewTransform AngleX="-5"
													   AngleY="0" />
										<RotateTransform Angle="0" />
										<TranslateTransform X="0"
															Y="0" />
									</TransformGroup>
								</TextBlock.RenderTransform><InlineUIContainer>
									<ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
													  Content="{TemplateBinding Header}"
													  ContentSource="Header"
													  ContentStringFormat="{TemplateBinding HeaderStringFormat}"
													  RecognizesAccessKey="True" />	
								</InlineUIContainer></TextBlock>
						</Border>
						<Border SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
								Grid.Column="0"
								Grid.Row="1"
								Background="{TemplateBinding Background}"
								BorderBrush="{TemplateBinding BorderBrush}"
								BorderThickness="2,0,2,2"
								CornerRadius="0,0,0,0">
							<ContentPresenter Margin="{TemplateBinding Padding}"
											  x:Name="contentPresenter"
											  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
											  Content="{TemplateBinding Content}"
											  ContentStringFormat="{TemplateBinding ContentStringFormat}"
											  ContentTemplate="{TemplateBinding ContentTemplate}" />
						</Border>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

