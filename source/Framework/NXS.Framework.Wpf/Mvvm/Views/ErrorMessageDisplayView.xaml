<UserControl x:Class="NXS.Framework.Wpf.Mvvm.Views.ErrorMessageDisplayView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Grid x:Name="gdRoot">
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="30" />
		</Grid.RowDefinitions>

		<ScrollViewer VerticalScrollBarVisibility="Auto"
					  HorizontalScrollBarVisibility="Disabled">
			<ItemsControl ItemsSource="{Binding Path=ErrorMessages}"
						  ItemTemplate="{StaticResource ErrorMessageTemplate}"/>
		</ScrollViewer>
		
		<Button Grid.Row="1"
				Content="Close"
				HorizontalAlignment="Right"
				VerticalAlignment="Bottom"
				Width="60"
				Command="{Binding CloseWorkSpaceCommand}"/>
	</Grid>
</UserControl>